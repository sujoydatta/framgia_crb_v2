<div id="dialog-repeat-event-form" class="dialog-hidden ep-recl-dialog" tabindex="0" role="dialog">
  <div class="repeat-setting">
    <div class="ep-recl-dialog-title">
      <span class="ep-recl-dialog-title"><%= t ".repeat_setting" %></span>
      <span class="ep-recl-dialog-title-close close-repeat-modal"></span>
    </div>
    <div class="ep-recl-dialog-content">
      <table class="ep-rec" role="presentation">
        <tbody>
          <tr>
            <th width="20%"><%= t ".repeats" %></th>
            <td class="repeat_type" width="80%">
              <%= f.select :repeat_type, Settings.repeat.repeat_type, {}, {class: "form-control"} %>
            </td>
          </tr>
          <tr>
            <th><%= t ".repeat_every" %></th>
            <td>
              <div id="select-repeat-every">
                <%= f.select :repeat_every, 1..Settings.repeat.repeat_every, {}, {class: "form-control"} %>
              </div>
            </td>
          </tr>
          <tr>
            <th><%= t ".start_on" %></th>
            <td>
              <%= f.hidden_field :start_repeat %>
              <%= f.text_field :start_repeat,
                value: datetime_format(@event.start_repeat, "short_date"),
                required: false, class: "date start date-time form-control",
                id: "start-date-repeat" %>
            </td>
          </tr>
          <tr>
            <th class="ep-rec-ends-th"><%= t ".ends" %></th>
            <td>
              <span class="ep-rec-ends-opt">
                <%= f.hidden_field :end_repeat %>
                <%= f.text_field :end_repeat,
                  value: datetime_format(@event.end_repeat, "short_date"),
                  required: false, class: "date finish date-time form-control",
                  id: "end-date-repeat" %>
              </span>
            </td>
          </tr>
          <tr class="dialog-hidden" id="repeat-on">
            <%= render "events/repeat_on", f: f %>
          </tr>
          <tr>
            <th></th>
            <td>
              <div>
                <div class="done-repeat goog-imageless-button-content btn btn-default" type="button" role="button">
                  <%= t ".done" %>
                </div>
                <div class="cancel-repeat goog-imageless-button-content btn btn-default" type="button" role="button">
                  <%= t ".cancel" %>
                </div>
              </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
